<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developerspace.webrtcsample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/swap_mind_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/swap_mind_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwapMind.NoActionBar">
        <activity
            android:name=".compose.ComposeMainActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.WebRTCSample"/>
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.WebRTCSample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChatMainActivity"
            android:exported="false"
            android:theme="@style/Theme.WebRTCSample"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FullScreen">
            <!--            <intent-filter>-->
            <!--                <action android:name="android.intent.action.MAIN" />-->

            <!--                <category android:name="android.intent.category.LAUNCHER" />-->
            <!--            </intent-filter>-->
        </activity>
        <activity
            android:name=".RTCActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WebRTCSample"/>
        <activity
            android:name=".activeUsers.ui.ActiveUserActivity"
            android:screenOrientation="portrait"
            android:label="Active Users"
            android:theme="@style/Theme.WebRTCSample"/>
    </application>

</manifest>